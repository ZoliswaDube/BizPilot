{
  "expo": {
    "name": "BizPilot",
    "slug": "bizpilot-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "bizpilot",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#020617"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bizpilot.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan receipts and barcodes for inventory management",
        "NSContactsUsageDescription": "This app uses contacts to import customer information",
        "NSLocationWhenInUseUsageDescription": "This app uses location to find nearby customers and suppliers",
        "NSFaceIDUsageDescription": "Use Face ID to authenticate securely"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#020617"
      },
      "package": "com.bizpilot.mobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_CONTACTS",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.VIBRATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#a78bfa"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow BizPilot to access your camera to scan receipts and barcodes"
        }
      ],
      "expo-contacts",
      "expo-location",
      "expo-local-authentication",
      [
        "expo-router",
        {
          "root": "./app"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
} 