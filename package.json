{
  "name": "bizpilot-monorepo",
  "version": "1.0.0",
  "description": "BizPilot - Comprehensive Business Management Platform",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:web && npm run install:mobile && npm run install:shared",
    "install:backend": "cd backend && npm install",
    "install:web": "cd web && npm install",
    "install:mobile": "cd mobile && npm install",
    "install:shared": "cd shared && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build": "npm run build:shared && npm run build:backend && npm run build:web",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd web && npm run build",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd backend && npm run test",
    "test:web": "cd web && npm run test",
    "lint": "npm run lint:backend && npm run lint:web",
    "lint:backend": "cd backend && npm run lint",
    "lint:web": "cd web && npm run lint",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:generate": "cd backend && npx prisma generate",
    "db:studio": "cd backend && npx prisma studio",
    "clean": "npm run clean:backend && npm run clean:web && npm run clean:shared",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "clean:web": "cd web && rm -rf .next node_modules",
    "clean:shared": "cd shared && rm -rf dist node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "business",
    "management",
    "inventory",
    "pos",
    "ecommerce",
    "typescript",
    "react",
    "react-native",
    "nextjs",
    "nodejs",
    "express",
    "prisma",
    "postgresql"
  ],
  "author": "BizPilot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/bizpilot.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
